<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">


        <LinearLayout
            android:id="@+id/itemdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/papularbg"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@drawable/bedsidetable" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="PKR"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:gravity="start"
                    android:text="4500"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="start"
                        android:text="PKR"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:gravity="start"
                        android:text="5500"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bed Side Table"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Free shipping"
                android:textColor="#68C100" />



            /**specifications**/
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/specifi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsd"/>
                    <TextView
                        android:id="@+id/specifi2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdfsad"
                        android:gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/specifi3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsd"/>
                    <TextView
                        android:id="@+id/specifi4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdfsad"
                        android:gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/specifi5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsd"/>
                    <TextView
                        android:id="@+id/specifi6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdfsad"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/service1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsd"/>
                    <TextView
                        android:id="@+id/service2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdfsad"
                        android:gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/service3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsd"/>
                    <TextView
                        android:id="@+id/service4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdfsad"
                        android:gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/service5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsd"/>
                    <TextView
                        android:id="@+id/service6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdfsad"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/delivery"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </LinearLayout>






</LinearLayout>